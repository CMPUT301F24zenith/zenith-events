<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="start"
    tools:context=".Organizer.EventView"
    android:padding="16dp"
    >

    <ImageView
        android:id="@+id/eventImage"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/gray"
        android:scaleType="fitCenter" />
    <TextView
        android:id="@+id/eventName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/facilityName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facility Name"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/eventAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Address"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/eventDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:textSize="16sp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/facilityContainer"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:gravity="center">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/waitlistButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Waitlisted Entrants" />

            <Button
                android:id="@+id/registeredListButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Registered Entrants"
                android:layout_marginTop="8dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <Button
                android:id="@+id/selectedListButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Selected Entrants" />

            <Button
                android:id="@+id/cancelledListButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cancelled Entrants"
                android:layout_marginTop="8dp" />
        </LinearLayout>
    </LinearLayout>


    <Button
        android:id="@+id/qrCodeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:text="QR Code" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Join Waiting List"
        android:id="@+id/btnJoinWaitingList"
        />

    <ProgressBar
        android:id="@+id/progressBar"
        style="?android:attr/progressBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"/>


</LinearLayout>