<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:padding="20dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Facility Details"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/pasteColor"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/namefield"
        android:text="Facility Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/lightBlueColor"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="10dp"
        android:layout_gravity="center" />
    <View
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="@color/lightBlueColor"/>

    <TextView
        android:id="@+id/emailfield"
        android:text="Email Address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/lightBlueColor"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center" />
    <View
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="@color/lightBlueColor"/>

    <TextView
        android:id="@+id/phonefield"
        android:text="Phone Number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/lightBlueColor"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center" />
    <View
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="@color/lightBlueColor"/>


    <Button
        android:id="@+id/editbuttonfield"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:text="Edit"
        android:textStyle="bold"
        android:textColor="#2727B6"
        android:backgroundTint="@color/pasteColor" />


</LinearLayout>
