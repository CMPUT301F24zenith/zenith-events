<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Event ID or Name -->
    <TextView
        android:id="@+id/eventIdOrName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Name or ID"
        android:textSize="18sp"
        android:textStyle="bold" />

    <!-- Event Creator (Organization) -->
    <TextView
        android:id="@+id/eventCreator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Created by: Organization"
        android:textSize="16sp" />

    <!-- Number of Participants -->
    <TextView
        android:id="@+id/numParticipants"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Participants: 0"
        android:textSize="16sp" />

    <!-- Image (optional, only shown if the URL is valid) -->
    <ImageView
        android:id="@+id/eventImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
    android:scaleType="fitCenter" />

    <!-- Image URL (optional, can be displayed if needed) -->
    <TextView
        android:id="@+id/eventImageUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image URL"
        android:visibility="gone"
    android:textSize="16sp" />
    <TextView
        android:id="@+id/eventQRCodeURL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Image URL"
        android:visibility="gone"
        android:textSize="16sp" />

</LinearLayout>
