<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Admin.AdminViewActivity"
    android:background="@color/background_color">

  <TextView
      android:id="@+id/txtAdminDashboard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="15dp"
      android:gravity="center"
      android:text="Admin Dashboard"
      android:background="@color/container_background"
      android:textSize="20sp"
      android:textStyle="bold"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />


  <FrameLayout
      android:id="@+id/fragment_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingBottom="30dp"
      android:paddingTop="20dp"
      app:layout_constraintTop_toBottomOf="@id/txtAdminDashboard"
      app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
      />

  <LinearLayout
      android:id="@+id/linearLayout2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/background_color"
      android:gravity="center"
      android:orientation="horizontal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      android:paddingLeft="15dp"
      android:paddingRight="15dp"
      android:weightSum="3"
      app:layout_constraintEnd_toEndOf="parent">

    <Button
        android:id="@+id/btnUsers"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/container_background"
        android:drawableTop="@drawable/baseline_people_24"
        android:text="Users"
        android:layout_weight="1"
        android:drawableTint="@color/inactive_button_color"
        android:textColor="@color/inactive_button_color"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnEvents"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:layout_weight="1"
        android:backgroundTint="@color/container_background"
        android:padding="5dp"
        android:text="Events"
        android:drawableTop="@drawable/baseline_event_24"
        android:drawableTint="@color/inactive_button_color"
        android:textColor="@color/inactive_button_color"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btnFacilites"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="80dp"
        android:layout_height="70dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/container_background"
        android:padding="5dp"
        android:text="Facilites"
        android:layout_weight="1"
        android:drawableTop="@drawable/building_svgrepo_com"
        android:drawableTint="@color/inactive_button_color"
        android:textColor="@color/inactive_button_color"
        android:textSize="12sp" />
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
