<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".admin.AdminViewActivity"
    android:background="@color/background_color">

  <!-- Admin Dashboard TextView -->
  <TextView
      android:id="@+id/txtAdminDashboard"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:padding="15dp"
      android:gravity="center"
      android:text="Admin Dashboard"
      android:background="@color/container_background"
      android:textSize="20dp"
      android:textStyle="bold"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent" />


  <FrameLayout
      android:id="@+id/fragment_container"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:paddingTop="13dp"
      android:paddingBottom="18dp"
      android:layout_marginBottom="10dp" />


  <LinearLayout
      android:id="@+id/linearLayout2"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:background="@color/background_color"
      android:gravity="center"
      android:orientation="horizontal"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent">

    <Button
        android:id="@+id/btnUsers"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="@color/container_background"
        android:text="Users"

        android:textColor="@color/active_button_color"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnEvents"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="@color/container_background"
        android:padding="5dp"
        android:text="Events"

        android:textColor="@color/active_button_color"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btnFacilites"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:backgroundTint="@color/container_background"
        android:padding="5dp"
        android:text="Facilites"
        android:textColor="@color/active_button_color"
        android:textSize="18dp" />
  </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
