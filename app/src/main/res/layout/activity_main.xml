<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:layout_gravity="center"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:padding="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zenith Events"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <!-- Entrant Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/entrantCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/container_background"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/entrant_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entrant: A participant who can join event waiting lists, manage their profile, and receive notifications about event participation."
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:textColor="@color/active_button_color"
                    android:layout_marginBottom="10dp" />

                <Button
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:id="@+id/entrantButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entrant"
                    android:textSize="16sp"
                    android:textColor="@color/active_button_color"
                    android:layout_gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>


        <androidx.cardview.widget.CardView
            android:id="@+id/organizerCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/container_background"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/organizer_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/active_button_color"
                    android:text="Organizer: A user responsible for creating and managing events, viewing entrant data, sending notifications, and managing event settings like geolocation or waiting list limits."
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:layout_marginBottom="10dp" />

                <Button
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:id="@+id/organizerButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/active_button_color"
                    android:text="Organizer"
                    android:textSize="16sp"
                    android:layout_gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/adminCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:animation="@anim/linear_layout_animation"
            android:layout_margin="10dp"
            app:cardBackgroundColor="@color/container_background"
            app:cardCornerRadius="15dp"
            app:cardElevation="4dp"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp">

            <LinearLayout
                android:id="@+id/admin_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                android:visibility="gone"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/admin_description"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/active_button_color"
                    android:text="Administrator: A user with oversight capabilities, responsible for maintaining app integrity by managing and removing events, profiles, facilities, and inappropriate content."
                    android:textSize="16sp"
                    android:textStyle="italic"
                    android:layout_marginBottom="10dp" />

                <Button
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:id="@+id/adminButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/active_button_color"
                    android:text="Administrator"
                    android:textSize="16sp"
                    android:layout_gravity="center" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</ScrollView>
