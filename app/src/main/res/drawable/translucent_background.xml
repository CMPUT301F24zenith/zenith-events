<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- First Layer: Image -->
    <item>
        <bitmap
            android:src="@drawable/space_image" />
        android:gravity="center" />
    </item>

    <!-- Second Layer: Semi-Transparent Color Overlay -->
    <item android:left="0dp" android:right="0dp" android:top="0dp" android:bottom="0dp">
        <shape>
            <solid android:color="@color/semi_transparent_overlay" /> <!-- Semi-transparent color -->
        </shape>
    </item>
</layer-list>